<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
       xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
       tools:context="com.admios.app.MainToggl">

    <!-- Login progress -->
    <LinearLayout
        android:id="@+id/loading_status"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/login_status_message"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:fontFamily="sans-serif-light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/loading"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:context="com.admios.app.MainToggl"
        tools:ignore="MergeRootFrame">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_margin="10dp"
            android:background="@drawable/form">
        </RelativeLayout>

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/entriesList"
            android:layout_gravity="center"
            android:layout_marginTop="85dp"
            android:padding="5dp"
            android:layout_marginBottom="25dp"
            />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/edit_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.admios.app.MainToggl">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_margin="10dp"
            android:background="@drawable/form">

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/descriptionEditText"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                bootstrapbutton:be_roundedCorners="true"
                android:hint="@string/description"
                android:layout_margin="5dp"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/timeEditText"
                android:hint="@string/time"
                android:layout_below="@+id/descriptionEditText"
                android:layout_alignLeft="@+id/descriptionEditText"
                android:layout_alignStart="@+id/descriptionEditText"
                bootstrapbutton:be_roundedCorners="true"
                android:layout_toLeftOf="@+id/buttonStart"/>

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:drawableRight="@android:drawable/ic_media_play"
                android:layout_alignRight="@+id/descriptionEditText"
                android:layout_alignEnd="@+id/descriptionEditText"
                android:layout_alignBottom="@+id/timeEditText"
                android:layout_below="@+id/descriptionEditText"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_continue"
                />
        </RelativeLayout>

    </FrameLayout>
</merge>